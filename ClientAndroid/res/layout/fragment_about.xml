<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarAlwaysDrawVerticalTrack="false" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            <ImageView
		        android:id="@+id/imgLogoCaritas"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:src="@drawable/logo_caritas" />
		
		    <TextView
		        android:id="@+id/tvAbout"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingTop="10dp"
		        android:text="Esta aplicação destina-se a apoiar as campanhas de recolha de bens possibilitando a sua catalogação, inventariação e posteriormente gestão de donativos.\n\nO utilizador necessita de estar registado e possuir uma palavra-chave para realizar operações nas campanhas que estiverem em curso e efetuar consulta de informação.\n\nEsta aplicação foi desenvolvida por um aluno do ISEC – Instituto Superior de Engenharia de Coimbra."
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		
		    <ImageView
		        android:id="@+id/imgLogoIsec"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingTop="10dp"
		        android:src="@drawable/logo_isec" />
		        </LinearLayout>
    </ScrollView>

</LinearLayout>
